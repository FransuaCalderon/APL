  VISTA                  VARCHAR2(150 CHAR)  NOT NULL,
  IDUSUARIOCREACION      NUMBER(10)          NOT NULL,
  FECHACREACION          TIMESTAMP(7)        NOT NULL,  -- datetime2(7) â†’ TIMESTAMP(7)
  IDUSUARIOMODIFICACION  NUMBER(10),
