@{
    ViewData["Title"] = "Aprobación de Acuerdos";
    var usuarioActual = ViewBag.UsuarioActual as string;
}

@section Scripts {
    <script>
        window.usuarioActual = '@usuarioActual';
    </script>
    <script src="~/js/jquery-3.7.1.min.js" asp-append-version="true"></script>
    <script src="~/js/Acuerdo/AprobarAcuerdo.js" asp-append-version="true"></script>
    <script src="~/js/datatables.min.js" asp-append-version="true"></script>
}

<style>
    /* Estilos de cabecera específicos para la tabla dinámica de artículos */
    .custom-header-cons-bg {
        background-color: #d4edda !important; /* Verde suave */
        color: #155724;
    }

    .custom-header-ingr-bg {
        background-color: #fff3cd !important; /* Amarillo suave */
        color: #856404;
    }

    .custom-header-calc-bg {
        background-color: #ffe5d0 !important; /* Naranja suave */
        color: #fd7e14;
    }
    /* Ajustes generales de la tabla */
    .tabla-items-header th {
        vertical-align: middle;
        font-size: 0.85rem;
        text-align: center;
    }

    .tabla-items-body td {
        font-size: 0.85rem;
        vertical-align: middle;
    }
    /* Estilos adicionales para tus botones personalizados si no están en global */
    .custom-btn-danger {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
    }

    .custom-btn-danger:hover {
        background-color: #c82333;
    }

</style>

<h2>Aprobar - Acuerdos</h2>
<hr>

<link rel="stylesheet" href="~/css/datatables.css" asp-append-version="true" />

<div id="vistaTabla" class="table-responsive">
    <div id="tabla">
    </div>
</div>

<div id="vistaDetalle" style="display:none;">

    <div class="card border-secondary mb-3">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-dark">Detalle del Acuerdo #<span id="lblIdAcuerdo"></span></h5>

            <button type="button" class="btn btn-sm btn-outline-dark" id="btnVolverTabla">
                <i class="fa-solid fa-arrow-left"></i> Volver a la Bandeja
            </button>
        </div>

        <div class="card-body">
            <form id="formVisualizar" class="row g-1">

                <div class="col-md-3">
                    <label class="form-label fw-bold col-form-label-sm">Proveedor</label>
                    <input type="text" class="form-control form-control-sm" id="verNombreProveedor" readonly disabled>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold col-form-label-sm">Tipo Fondo / Motivo</label>
                    <input type="text" class="form-control form-control-sm" id="verNombreTipoFondo" readonly disabled>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold col-form-label-sm">Clase Acuerdo</label>
                    <input type="text" class="form-control form-control-sm" id="verClaseAcuerdo" readonly disabled>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold col-form-label-sm">Estado</label>
                    <input type="text" class="form-control form-control-sm" id="verEstado" readonly disabled>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold col-form-label-sm">Descripción</label>
                    <input type="text" class="form-control form-control-sm" id="verDescripcion" readonly disabled>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold col-form-label-sm">Fecha Inicio</label>
                    <div class="input-group input-group-sm">
                        <input id="verFechaInicio" type="text" class="form-control form-control-sm" readonly disabled>
                        <span class="input-group-text"><i class="fa-regular fa-calendar"></i></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold col-form-label-sm">Fecha Fin</label>
                    <div class="input-group input-group-sm">
                        <input id="verFechaFin" type="text" class="form-control form-control-sm" readonly disabled>
                        <span class="input-group-text"><i class="fa-regular fa-calendar"></i></span>
                    </div>
                </div>

                <hr class="mt-3 mb-3" />

                <div class="col-md-3 mt-0">
                    <label class="form-label fw-bold col-form-label-sm">$ Valor Acuerdo</label>
                    <input type="text" class="form-control form-control-sm text-end fw-bold bg-light" id="verValorAcuerdo" readonly disabled>
                </div>

                <div class="col-md-3 mt-0">
                    <label class="form-label fw-bold col-form-label-sm">$ Disponible</label>
                    <input type="text" class="form-control form-control-sm text-end" id="verValorDisponible" readonly disabled>
                </div>

                <div class="col-md-3 mt-0">
                    <label class="form-label fw-bold col-form-label-sm">$ Comprometido</label>
                    <input type="text" class="form-control form-control-sm text-end" id="verValorComprometido" readonly disabled>
                </div>

                <div class="col-md-3 mt-0">
                    <label class="form-label fw-bold col-form-label-sm">$ Liquidado</label>
                    <input type="text" class="form-control form-control-sm text-end" id="verValorLiquidado" readonly disabled>
                </div>

                <div class="col-12 mt-4" id="contenedor-tabla-articulos" style="display:none;">
                </div>
                <div class="custom-form-row mt-3">
                    <div class="custom-form-col w-100">
                        <label class="form-label fw-bold col-form-label-sm" for="modal-acuerdo-comentario">Comentario de Aprobación/Rechazo:</label>
                        <textarea class="form-control" rows="3" maxlength="200" id="modal-acuerdo-comentario" name="comentario"></textarea>
                    </div>
                </div>
            </form>

            <hr class="custom-divider mt-4">

            <h5 class="custom-section-title mt-3 mb-3">
                <i class="fa-solid fa-list-check"></i> Historial de Aprobaciones
            </h5>
            <div class="custom-table-container">
                <div id="tabla-aprobaciones-fondo"></div>
            </div>
        </div>

        <div class="card-footer text-end">
            <button type="button" class="btn btn-secondary" id="btnVolverAbajo">Cancelar</button>
            <button type="button" class="custom-btn-danger" id="btnRechazarFondo">
                <i class="fa-solid fa-circle-xmark custom-btn-icon"></i>
                Rechazar
            </button>
            <button type="button" class="custom-btn-primary" id="btnAprobarFondo">
                <i class="fa-solid fa-circle-check custom-btn-icon"></i>
                Aprobar
            </button>
        </div>
    </div>
</div>