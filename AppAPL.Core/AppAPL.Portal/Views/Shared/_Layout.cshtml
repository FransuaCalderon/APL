<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - AppWebAPL</title>

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
		  integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
		  crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/headers.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/sidebars.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/principal.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/AppWebAPL.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/sweetalert2.css" />

	<meta name="theme-color" content="#712cf9">
	<script src="~/js/sweetalert2.all.min.js"></script>

	<style>
		/* === INICIO DE LA CORRECCIÓN === */

		/* 1. Añade un padding superior al body para dejar espacio al header fijo */
		body {
			/* Puedes ajustar este valor (ej: 70px, 80px) si la altura de tu header cambia */
			padding-top: 75px;
		}

		/* 2. Ajusta el botón del menú para que se "pegue" al inicio del contenido */
		.menu-toggle-container {
			position: sticky;
			top: 0; /* Se pega al inicio del área de contenido, justo debajo del header */
			z-index: 1020;
			background: #f8f9fa;
			border-bottom: 1px solid #dee2e6;
		}

		/* 3. Se elimina la regla 'margin-top' de 'main' porque ya no es necesaria */


		/* === FIN DE LA CORRECCIÓN === */


		.b-example-divider {
			display: none !important;
		}

		#sidebar.hidden {
			width: 0 !important;
			padding: 0 !important;
			overflow: hidden;
			border: none;
		}

		#mainContent.fullscreen {
			width: 100% !important;
			margin-left: 0 !important;
		}

		/* Mantener visibilidad de los textos */
		#sidebar ul li button,
		#sidebar ul li a {
			color: #212529 !important;
		}
	</style>
</head>

<body>
	<header class="fixed-top">
		<div class="px-3 py-2 text-bg-dark border-bottom">
			<div class="container-fluid">
				<div class="d-flex align-items-center justify-content-between">
					<a href="/" class="d-flex align-items-center text-white text-decoration-none">
						<img class="me-2" width="40" height="32" src="~/img/ico/APL.png" alt="Logo APL">
						<span style="font-size: 1.25rem; font-weight: bold;">APL Software</span>
					</a>

					<ul class="nav text-small mb-0">
						<li class="nav-item dropdown">
							<a href="#" class="nav-link text-white dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
								<img src="https://github.com/mdo.png" alt="Perfil" width="32" height="32" class="rounded-circle">
							</a>
							<ul class="dropdown-menu dropdown-menu-end">
								<li><a class="dropdown-item text-dark text-center bg-warning" href="#">Ali Macias</a></li>
								<li><hr class="dropdown-divider"></li>
								<li><a class="dropdown-item" href="#">Configuración</a></li>
								<li><a class="dropdown-item" href="#">Perfil</a></li>
								<li><hr class="dropdown-divider"></li>
								<li><a class="dropdown-item" href="#">Cerrar Sesión</a></li>
							</ul>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</header>

	<div class="container-fluid">
		<div class="row">

			<div class="menu-toggle-container d-flex justify-content-start align-items-center p-2">
				<button id="toggleMenu" class="btn btn-primary">
					☰ Menú
				</button>
			</div>

			<div id="sidebar" class="flex-shrink-0 p-3 scrollarea border col-2" style="height: 590px; transition: all 0.3s;">
				<ul class="list-unstyled ps-0">
					<li class="mb-1">
						<button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed"
								data-bs-toggle="collapse" data-bs-target="#config-collapse" aria-expanded="true">
							Configuración
						</button>
						<div class="collapse show" id="config-collapse">
							<ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
								<li>
									<a class="link-body-emphasis d-inline-flex text-decoration-none rounded"
									   asp-area="" asp-controller="CatalogoTipo" asp-action="Index">Tipo Catálogo</a>
								</li>
								<li>
									<a class="link-body-emphasis d-inline-flex text-decoration-none rounded"
									   asp-area="" asp-controller="Catalogo" asp-action="Index">Catálogo</a>
								</li>
								<li>
									<a class="link-body-emphasis d-inline-flex text-decoration-none rounded"
									   asp-area="" asp-controller="Opciones" asp-action="Index">Opciones</a>
								</li>
							</ul>
						</div>
					</li>

					<li class="mb-1">
						<button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed"
								data-bs-toggle="collapse" data-bs-target="#acuerdos-collapse" aria-expanded="false">
							Acuerdos
						</button>
						<div class="collapse" id="acuerdos-collapse">
							<ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
								<li><a class="link-body-emphasis d-inline-flex text-decoration-none rounded" href="#">Gestión de Acuerdos</a></li>
								<li><a class="link-body-emphasis d-inline-flex text-decoration-none rounded" href="#">Historial</a></li>
							</ul>
						</div>
					</li>

					<li class="mb-1">
						<button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed"
								data-bs-toggle="collapse" data-bs-target="#fondos-collapse" aria-expanded="false">
							Fondos
						</button>
						<div class="collapse" id="fondos-collapse">
							<ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
								<li><a class="link-body-emphasis d-inline-flex text-decoration-none rounded" href="#">Movimientos</a></li>
								<li><a class="link-body-emphasis d-inline-flex text-decoration-none rounded" href="#">Cuentas</a></li>
							</ul>
						</div>
					</li>

					<li class="mb-1">
						<button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed"
								data-bs-toggle="collapse" data-bs-target="#promo-collapse" aria-expanded="false">
							Promociones
						</button>
						<div class="collapse" id="promo-collapse">
							<ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
								<li><a class="link-body-emphasis d-inline-flex text-decoration-none rounded" href="#">Campañas</a></li>
								<li><a class="link-body-emphasis d-inline-flex text-decoration-none rounded" href="#">Descuentos</a></li>
							</ul>
						</div>
					</li>
				</ul>
			</div>

			<main id="mainContent" class="col transition-all" style="transition: all 0.3s;">
				@RenderBody()
			</main>
		</div>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	<script>
		document.getElementById('toggleMenu').addEventListener('click', function () {
			const sidebar = document.getElementById('sidebar');
			const main = document.getElementById('mainContent');
			sidebar.classList.toggle('hidden');
			main.classList.toggle('fullscreen');
		});
	</script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>