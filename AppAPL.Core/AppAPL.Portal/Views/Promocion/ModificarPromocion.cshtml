@* ~/Views/Promocion/ModificarPromocion.cshtml *@
@{
    ViewData["Title"] = "Modificación de Promociones";
    var usuarioActual = ViewBag.UsuarioActual as string;
}

@section Scripts {
    <script>window.usuarioActual = '@usuarioActual';</script>
    <script src="~/js/jquery-3.7.1.min.js" asp-append-version="true"></script>
    <script src="~/js/Promocion/ModificarPromocion.js" asp-append-version="true"></script>
    <script src="~/js/datatables.min.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.3/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.3/jquery-ui.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.3/i18n/datepicker-es.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" crossorigin="anonymous" />
}

<link rel="stylesheet" href="~/css/datatables.css" asp-append-version="true" />

<style>
    /* =====================================================
           ESTILOS PARA EL FORMULARIO DE MODIFICACIÓN (ORIGINALES)
        ===================================================== */
    #dvPromocionGeneral .form-control,
    #dvPromocionGeneral .form-select {
        font-size: 0.8rem;
        height: 31px;
    }

    #dvPromocionGeneral .form-label {
        font-size: 0.78rem;
        margin-bottom: 2px;
    }

    #dvPromocionGeneral .input-group-text {
        font-size: 0.8rem;
        padding: 0.25rem 0.5rem;
    }

    #dvPromocionGeneral .btn-outline-secondary {
        font-size: 0.78rem;
        padding: 0.25rem 0.4rem;
        border-color: #6c757d;
    }

        #dvPromocionGeneral .btn-outline-secondary img {
            width: 14px;
            height: 14px;
        }

    .promo-top-row {
        border-bottom: 1px solid #dee2e6;
        padding-bottom: 8px;
        margin-bottom: 4px;
    }

        .promo-top-row .input-group-text {
            font-weight: 700;
            font-size: 0.82rem;
        }

        .promo-top-row .btn-group .btn {
            font-size: 0.75rem;
            padding: 4px 8px;
            display: flex;
            align-items: center;
            gap: 4px;
        }

            .promo-top-row .btn-group .btn i {
                font-size: 0.85rem;
            }

    .seg-input-group .btn {
        padding: 0.25rem 0.35rem;
        line-height: 1;
    }

        .seg-input-group .btn i {
            font-size: 0.75rem;
        }

    .soporte-section {
        border-top: 1px solid #dee2e6;
        padding-top: 8px;
        margin-top: 6px;
    }

        .soporte-section .btn-buscar {
            font-size: 0.78rem;
            padding: 4px 10px;
            white-space: nowrap;
        }

        .soporte-section .soporte-nombre {
            font-size: 0.78rem;
            background: #e9ecef;
        }

    .regalo-check-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 31px;
    }

        .regalo-check-container input[type="checkbox"] {
            width: 16px;
            height: 16px;
            accent-color: #0d6efd;
            cursor: pointer;
        }

    .articulo-group .input-group-text {
        padding: 0.25rem 0.4rem;
    }

    .articulo-group .form-check-input {
        width: 14px;
        height: 14px;
        margin: 0;
        cursor: pointer;
    }

    /* Clase para el botón de Varios seleccionado */
    .btn-success-custom {
        background-color: #198754;
        color: white;
        border-color: #198754;
        font-size: 0.78rem;
        padding: 0.25rem 0.4rem;
    }
</style>

<h2>Modificación - Promociones</h2>
<hr class="separador-fondos" />

<div id="vistaTabla" class="table-responsive">
    <div id="tabla"></div>
</div>

<div id="vistaDetalle" style="display:none;">

    <div class="card border-secondary mb-3">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-dark">Modificar Promoción #<span id="lblIdPromocion"></span></h5>
            <button type="button" class="btn btn-sm btn-outline-dark" id="btnVolverTabla">
                <i class="fa-solid fa-arrow-left"></i> Volver a la Bandeja
            </button>
        </div>

        <div class="card-body p-3">
            <input type="hidden" id="modalPromocionId">
            <input type="hidden" id="modalTipoPromocion">

            <div id="dvPromocionGeneral">
                <div class="row g-1 promo-top-row justify-content-between">
                    <div class="col">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">Promoción</span>
                            <input type="text" class="form-control" id="verPromocionHeader" readonly>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="input-group input-group-sm mb-1">
                            <span class="input-group-text" id="inputGroup-sizing-sm">No. Promoción</span>
                            <input type="text" class="form-control text-center" id="verPromocionNum" style="max-width: 100px;" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" readonly>
                        </div>
                    </div>
                </div>

                <form id="formPromocion" class="row g-2 mt-1">

                    <div class="col-md-3 text-center">
                        <label for="promocionDescripcion" class="form-label fw-bold col-form-label-sm">Descripción</label>
                        <input type="text" class="form-control form-control-sm" id="promocionDescripcion" placeholder="Descripción de promoción" maxlength="200">
                    </div>
                    <div class="col-md-3 text-center">
                        <label for="promocionMotivo" class="form-label fw-bold col-form-label-sm">Motivo</label>
                        <select id="promocionMotivo" class="form-select form-select-sm">
                            <option value="">Cargando...</option>
                        </select>
                    </div>
                    <div class="col-md-2 text-center">
                        <label for="promocionFechaInicio" class="form-label fw-bold col-form-label-sm">Inicio: Fecha - Hora</label>
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control form-control-sm" id="promocionFechaInicio" placeholder="dd/mm/aaaa">
                            <button class="btn btn-outline-secondary" type="button" id="btnFechaInicio">
                                <i class="fa-regular fa-calendar"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-2 text-center">
                        <label for="promocionFechaFin" class="form-label fw-bold col-form-label-sm">Fin: Fecha - Hora</label>
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control form-control-sm" id="promocionFechaFin" placeholder="dd/mm/aaaa">
                            <button class="btn btn-outline-secondary" type="button" id="btnFechaFin">
                                <i class="fa-regular fa-calendar"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-2 text-center">
                        <label for="verEstadoPromocion" class="form-label fw-bold col-form-label-sm">Estado</label>
                        <input type="text" class="form-control form-control-sm" id="verEstadoPromocion" readonly disabled>
                    </div>

                    <div class="col-md-2 text-center">
                        <label for="segMarca" class="form-label fw-bold col-form-label-sm">Marca</label>
                        <div class="input-group input-group-sm seg-input-group">
                            <button id="btnMarca" class="btn btn-outline-secondary d-none" type="button" data-bs-toggle="modal" data-bs-target="#ModalMarca"><i class="fa-solid fa-list-check"></i></button>
                            <select id="segMarca" class="form-select form-select-sm"><option value="" selected>Todas</option></select>
                        </div>
                    </div>
                    <div class="col-md-2 text-center">
                        <label for="segDivision" class="form-label fw-bold col-form-label-sm">División</label>
                        <div class="input-group input-group-sm seg-input-group">
                            <button id="btnDivision" class="btn btn-outline-secondary d-none" type="button" data-bs-toggle="modal" data-bs-target="#ModalDivision"><i class="fa-solid fa-list-check"></i></button>
                            <select id="segDivision" class="form-select form-select-sm"><option value="" selected>Todas</option></select>
                        </div>
                    </div>
                    <div class="col-md-2 text-center">
                        <label for="segDepartamento" class="form-label fw-bold col-form-label-sm">Departamento</label>
                        <div class="input-group input-group-sm seg-input-group">
                            <button id="btnDepartamento" class="btn btn-outline-secondary d-none" type="button" data-bs-toggle="modal" data-bs-target="#ModalDepartamento"><i class="fa-solid fa-list-check"></i></button>
                            <select id="segDepartamento" class="form-select form-select-sm"><option value="" selected>Todos</option></select>
                        </div>
                    </div>
                    <div class="col-md-2 text-center">
                        <label for="segClase" class="form-label fw-bold col-form-label-sm">Clase</label>
                        <div class="input-group input-group-sm seg-input-group">
                            <button id="btnClase" class="btn btn-outline-secondary d-none" type="button" data-bs-toggle="modal" data-bs-target="#ModalClase"><i class="fa-solid fa-list-check"></i></button>
                            <select id="segClase" class="form-select form-select-sm"><option value="" selected>Todas</option></select>
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <label for="segArticulo" class="form-label fw-bold col-form-label-sm">Artículo</label>
                        <div class="input-group input-group-sm articulo-group">
                            <div class="input-group-text">
                                <input class="form-check-input mt-0" type="checkbox" id="chkArticulo">
                            </div>
                            <input type="text" class="form-control" id="segArticulo" disabled>
                        </div>
                    </div>

                    <div class="col-md-2 text-center">
                        <label for="segCanal" class="form-label fw-bold col-form-label-sm">Canal</label>
                        <div class="input-group input-group-sm seg-input-group">
                            <button id="btnCanal" class="btn btn-outline-secondary d-none" type="button" data-bs-toggle="modal" data-bs-target="#ModalCanal"><i class="fa-solid fa-list-check"></i></button>
                            <select class="form-select form-select-sm" id="segCanal"><option value="" selected>Todos</option></select>
                        </div>
                    </div>
                    <div class="col-md-2 text-center">
                        <label for="segGrupoAlmacen" class="form-label fw-bold col-form-label-sm">Grupo</label>
                        <div class="input-group input-group-sm seg-input-group">
                            <button id="btnGrupoAlmacen" class="btn btn-outline-secondary d-none" type="button" data-bs-toggle="modal" data-bs-target="#ModalGrupoAlmacen"><i class="fa-solid fa-list-check"></i></button>
                            <select class="form-select form-select-sm" id="segGrupoAlmacen"><option value="" selected>Todos</option></select>
                        </div>
                    </div>
                    <div class="col-md-2 text-center">
                        <label for="segAlmacen" class="form-label fw-bold col-form-label-sm">Almacén</label>
                        <div class="input-group input-group-sm seg-input-group">
                            <button id="btnAlmacen" class="btn btn-outline-secondary d-none" type="button" data-bs-toggle="modal" data-bs-target="#ModalAlmacen"><i class="fa-solid fa-list-check"></i></button>
                            <select class="form-select form-select-sm" id="segAlmacen"><option value="" selected>Todos</option></select>
                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <label for="segTipoCliente" class="form-label fw-bold col-form-label-sm">Tipo de Cliente</label>
                        <div class="input-group input-group-sm seg-input-group">
                            <button id="btnTipoCliente" class="btn btn-outline-secondary d-none" type="button" data-bs-toggle="modal" data-bs-target="#ModalClientesEspecificos"><i class="fa-solid fa-list-check"></i></button>
                            <select class="form-select form-select-sm" id="segTipoCliente"><option value="" selected>Todos</option></select>
                        </div>
                    </div>
                    <div class="col-md-3 text-center">
                        <label for="segMedioPago" class="form-label fw-bold col-form-label-sm">Medio Pago</label>
                        <div class="input-group input-group-sm seg-input-group">
                            <button id="btnMedioPago" class="btn btn-outline-secondary d-none" type="button" data-bs-toggle="modal" data-bs-target="#ModalMedioPago"><i class="fa-solid fa-list-check"></i></button>
                            <select class="form-select form-select-sm" id="segMedioPago"><option value="" selected>Todos</option></select>
                        </div>
                    </div>

                    <div class="col-md-1 text-center">
                        <label for="descuentoProveedor" class="form-label fw-bold col-form-label-sm">% Dscto Prov.</label>
                        <input type="text" class="form-control form-control-sm text-end input-numero" id="descuentoProveedor" placeholder="0.00">
                    </div>
                    <div class="col-md-2 text-center">
                        <label for="fondoProveedorText" class="form-label fw-bold col-form-label-sm">ID Acuerdo Proveedor</label>
                        <div class="input-group input-group-sm">
                            <input type="hidden" id="fondoProveedorId">
                            <input type="hidden" id="fondoDisponibleProv">
                            <input type="text" class="form-control" id="fondoProveedorText" placeholder="Seleccione..." readonly>
                            <button class="btn btn-outline-secondary" type="button" data-bs-toggle="modal" data-bs-target="#modalConsultaProveedor">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-2 text-center">
                        <label for="fondoValorTotal" class="form-label fw-bold col-form-label-sm">$ Comprometido Prov.</label>
                        <input type="text" class="form-control form-control-sm text-end input-numero" id="fondoValorTotal" placeholder="0.00">
                    </div>
                    <div class="col-md-1 text-center">
                        <label for="descuentoPropio" class="form-label fw-bold col-form-label-sm">% Dscto Prop</label>
                        <input type="text" class="form-control form-control-sm text-end input-numero" id="descuentoPropio" placeholder="0.00">
                    </div>
                    <div class="col-md-2 text-center">
                        <label for="acuerdoPropioText" class="form-label fw-bold col-form-label-sm">ID Acuerdo Propio</label>
                        <div class="input-group input-group-sm">
                            <input type="hidden" id="acuerdoPropioId">
                            <input type="hidden" id="acuerdoPropioDisponible">
                            <input type="text" class="form-control" id="acuerdoPropioText" placeholder="Seleccione..." readonly>
                            <button class="btn btn-outline-secondary" type="button" data-bs-toggle="modal" data-bs-target="#modalConsultaAcuerdoPropio">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-2 text-center">
                        <label for="comprometidoPropio" class="form-label fw-bold col-form-label-sm">$ Comprometido Propio</label>
                        <input type="text" class="form-control form-control-sm text-end input-numero" id="comprometidoPropio" placeholder="0.00">
                    </div>
                    <div class="col-md-1 text-center">
                        <label for="descuentoTotal" class="form-label fw-bold col-form-label-sm">% Dscto Total</label>
                        <input type="text" class="form-control form-control-sm text-end" id="descuentoTotal" placeholder="0.00" readonly disabled>
                    </div>
                    <div class="col-md-1 text-center">
                        <label for="promocionMarcaRegalo" class="form-label fw-bold col-form-label-sm">Regalo</label>
                        <div class="regalo-check-container">
                            <input class="form-check-input" type="checkbox" id="promocionMarcaRegalo">
                        </div>
                    </div>

                    <div class="col-12 soporte-section">
                        <div class="row align-items-center g-1">
                            <div class="col-auto">
                                <label class="form-label fw-bold col-form-label-sm mb-0">Adjuntar Documento Soporte</label>
                            </div>
                            <div class="col">
                                <div class="input-group input-group-sm">
                                    <label class="btn btn-secondary btn-sm soporte-buscar mb-0" for="inputArchivoSoporte"
                                           style="cursor:pointer; line-height: 1.5;">
                                        Buscar Archivo
                                    </label>
                                    <input type="file" id="inputArchivoSoporte" class="d-none"
                                           accept=".pdf,.doc,.docx,.xls,.xlsx,.png,.jpg,.jpeg"
                                           onchange="document.getElementById('lblArchivoActual').value = this.files[0] ? this.files[0].name : 'Ningún archivo seleccionado'">
                                    <input type="text" class="form-control soporte-nombre" id="lblArchivoActual"
                                           value="Ningún archivo seleccionado" readonly>
                                    <button class="btn btn-outline-secondary" type="button" id="btnVerSoporteActual"
                                            title="Ver Documento">
                                        <i class="fa-regular fa-file-lines"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            </div>

        </div><div class="card-footer text-end">
            <button type="button" class="btn btn-secondary" id="btnVolverAbajo">Cerrar</button>
            <button type="button" class="custom-btn-primary" id="btnGuardarModificacion" style="background-color: #0d6efd; color: white; border: none; padding: 0.375rem 0.75rem; border-radius: 0.25rem;">
                <i class="fa-solid fa-floppy-disk custom-btn-icon"></i> Guardar Modificación
            </button>
        </div>
    </div>
</div>
<div class="modal fade" id="ModalCanal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header"><h1 class="modal-title fs-5">Canales</h1><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body"><div class="row m-2" id="bodyModalCanal"></div></div>
            <div class="modal-footer"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button><button type="button" class="btn btn-primary" id="btnAceptarCanal" data-bs-dismiss="modal">Aceptar</button></div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalMarca" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header"><h1 class="modal-title fs-5">Marcas</h1><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body"><div class="row m-2" id="bodyModalMarca"></div></div>
            <div class="modal-footer"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button><button type="button" class="btn btn-primary" id="btnAceptarMarca" data-bs-dismiss="modal">Aceptar</button></div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalDivision" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header"><h1 class="modal-title fs-5">Divisiones</h1><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body"><div class="row m-2" id="bodyModalDivision"></div></div>
            <div class="modal-footer"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button><button type="button" class="btn btn-primary" id="btnAceptarDivision" data-bs-dismiss="modal">Aceptar</button></div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalDepartamento" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header"><h1 class="modal-title fs-5">Departamentos</h1><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body"><div class="row m-2" id="bodyModalDepartamento"></div></div>
            <div class="modal-footer"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button><button type="button" class="btn btn-primary" id="btnAceptarDepartamento" data-bs-dismiss="modal">Aceptar</button></div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalClase" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header"><h1 class="modal-title fs-5">Clases</h1><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body"><div class="row m-2" id="bodyModalClase"></div></div>
            <div class="modal-footer"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button><button type="button" class="btn btn-primary" id="btnAceptarClase" data-bs-dismiss="modal">Aceptar</button></div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalGrupoAlmacen" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header"><h1 class="modal-title fs-5">Grupos Almacenes</h1><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body"><div class="row m-2" id="bodyModalGrupoAlmacen"></div></div>
            <div class="modal-footer"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button><button type="button" class="btn btn-primary" id="btnAceptarGrupoAlmacen" data-bs-dismiss="modal">Aceptar</button></div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalAlmacen" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header"><h1 class="modal-title fs-5">Almacenes</h1><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body"><div class="row m-2" id="bodyModalAlmacen"></div></div>
            <div class="modal-footer"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button><button type="button" class="btn btn-primary" id="btnAceptarAlmacen" data-bs-dismiss="modal">Aceptar</button></div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalMedioPago" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header"><h1 class="modal-title fs-5">Medios de Pago</h1><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body"><div class="row m-2" id="bodyModalMedioPago"></div></div>
            <div class="modal-footer"><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button><button type="button" class="btn btn-primary" id="btnAceptarMedioPago" data-bs-dismiss="modal">Aceptar</button></div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalClientesEspecificos" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header"><h1 class="modal-title fs-5">Lista Específica de Clientes</h1><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
