@using AppAPL.Dto.CatalogoTipo
@model IEnumerable<CatalogoTipoDTO>;

@{
}

<h2>Tipo de Catalogo</h2>

<hr>

<style>
    /* Cambia el color de fondo del botón de paginación activo */
    .dataTables_wrapper .dataTables_paginate .paginate_button.current,
    .dataTables_wrapper .dataTables_paginate .paginate_button.current:hover {
        background: #6c757d !important; /* Un tono de gris de Bootstrap */
        color: white !important; /* Asegura que el texto sea blanco y legible */
        border-color: #6c757d !important; /* Cambia el color del borde para que coincida */
    }

    /* Cambia el color del texto de los otros botones de paginación */
    .dataTables_wrapper .dataTables_paginate .paginate_button {
        color: #6c757d !important;
    }

        /* Cambia el color y fondo de los botones al pasar el mouse sobre ellos */
        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            border-color: #6c757d !important;
            color: #6c757d !important;
            background: rgba(108, 117, 125, 0.1) !important; /* Un fondo gris claro al pasar el mouse */
        }
</style>

<link rel="stylesheet" href="~/css/datatables.css" asp-append-version="true" />

<div id="tabla"></div>

<div class="d-flex justify-content-end mt-3">
    <button type="button" class="btn" id="btnAgregarNuevo" title="Agregar Nuevo" style="background-color: #1b2c9e; border-color: #1b2c9e; color: white;">
        <i class="fa-solid fa-plus"></i> Agregar
    </button>
</div>

@section Scripts {
    <script src="~/js/jquery-3.7.1.min.js" asp-append-version="true"></script>
    <script src="~/js/TipoCatalogo/TipoCatalogo.js" asp-append-version="true"></script>
    <script src="~/js/datatables.min.js" asp-append-version="true"></script>
}

@* El modal se mantiene aquí. *@

<div class="modal fade" id="editarModal" tabindex="-1" aria-labelledby="editarModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editarModalLabel">Editar Tipo de Catálogo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formEditar">
                    <input type="hidden" id="modal-idCatalogoTipo" name="idCatalogoTipo">

                    <div class="mb-3">
                        <label for="modal-id" class="form-label fw-bold">ID</label>
                        <input type="text" class="form-control" id="modal-id" name="idCatalogo" disabled>
                    </div>

                    <div class="mb-3">
                        <label for="modal-nombre" class="form-label fw-bold">Nombre <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="modal-nombre" name="nombre">
                    </div>

                    <div class="mb-3">
                        <label for="modal-descripcion" class="form-label fw-bold">Descripción <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="modal-descripcion" name="descripcion" rows="3"></textarea>
                    </div>

                    <!--div class="mb-3">
                        <label for="modal-grupo" class="form-label">Grupo</label>
                        <select class="form-select" id="modal-grupo" name="grupo">
                            <option value="Configuracion">Configuracion</option>
                        </select>
                    </div>-->

                    <div class="mb-3 form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="modal-activo" name="activo">
                        <label class="form-check-label fw-bold" for="modal-activo">Activo <span class="text-danger">*</span></label>
                    </div>

                    <div class="mb-3">
                        <label for="modal-etiqueta" class="form-label fw-bold">Etiqueta <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="modal-etiqueta" name="etiqueta">
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnGuardarCambios">
                    <i class="fa-solid fa-pen-to-square me-2"></i> Modificar
                </button>
            </div>
        </div>
    </div>
</div>