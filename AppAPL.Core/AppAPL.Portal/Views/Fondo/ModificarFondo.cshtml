@{
    ViewData["Title"] = "Modificación de Fondos";
}

<h2>Modificación - Fondo</h2>
<hr>

<link rel="stylesheet" href="~/css/datatables.css" asp-append-version="true" />

<div class="table-responsive">
    <div id="tabla">
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery-3.7.1.min.js" asp-append-version="true"></script>
    <script src="~/js/Fondo/ModificarFondo.js" asp-append-version="true"></script>
    <script src="~/js/datatables.min.js" asp-append-version="true"></script>
}

@* ... (Tu código existente, como el <h2> y <div id="tabla">) ... *@
<<div class="modal-body pb-1 px-2">
    <form id="formEditarFondo">

        <div class="row mb-1 gx-2">
            <div class="col-md-12">
                <label class="form-label fw-bold mb-0 small">ID Fondo</label>
                <input type="text" class="form-control form-control-sm py-1" id="modal-fondo-id" disabled>
            </div>
        </div>

        <div class="row mb-1 gx-2">
            <div class="col-md-12">
                <label class="form-label fw-bold mb-0 small">Descripción <span class="text-danger">*</span></label>
                <input type="text" class="form-control form-control-sm py-1" id="modal-fondo-descripcion" name="descripcion">
            </div>
        </div>

        <div class="row mb-1 gx-2">
            <div class="col-md-12">
                <label class="form-label fw-bold mb-0 small">Proveedor</label>
                <select id="modal-fondo-proveedor" class="form-select form-select-sm py-1"></select>
            </div>
        </div>

        <div class="row mb-1 gx-2">
            <div class="col-md-12">
                <label class="form-label fw-bold mb-0 small">Tipo Fondo</label>
                <select id="modal-fondo-tipofondo" class="form-select form-select-sm py-1"></select>
            </div>
        </div>

        <div class="row mb-1 gx-2">
            <div class="col-md-12">
                <label class="form-label fw-bold mb-0 small">Fecha Inicio</label>
                <input type="date" class="form-control form-control-sm py-1" id="modal-fondo-fechainicio" name="fecha_inicio">
            </div>
        </div>

        <div class="row mb-1 gx-2">
            <div class="col-md-12">
                <label class="form-label fw-bold mb-0 small">Fecha Fin</label>
                <input type="date" class="form-control form-control-sm py-1" id="modal-fondo-fechafin" name="fecha_fin">
            </div>
        </div>

        <div class="row mb-1 gx-2">
            <div class="col-md-12">
                <label class="form-label fw-bold mb-0 small">Valor Fondo</label>
                <input type="number" class="form-control form-control-sm py-1" id="modal-fondo-valor" name="valor_fondo" step="0.01">
            </div>
        </div>

        <div class="row mb-1 gx-2">
            <div class="col-md-12">
                <label class="form-label fw-bold mb-0 small">Estado</label>
                <input type="text" class="form-control form-control-sm py-1" id="modal-fondo-estado" disabled>
            </div>
        </div>

    </form>
</div>
