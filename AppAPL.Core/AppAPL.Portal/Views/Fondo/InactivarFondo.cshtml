@{
    ViewData["Title"] = "Inactivación de Fondos";
}

<h2>Inactivación - Fondo</h2>
<hr>

<link rel="stylesheet" href="~/css/datatables.css" asp-append-version="true" />

<div class="table-responsive">
    <div id="tabla">
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery-3.7.1.min.js" asp-append-version="true"></script>
    <script src="~/js/Fondo/InactivarFondo.js" asp-append-version="true"></script>
    <script src="~/js/datatables.min.js" asp-append-version="true"></script>
}

<div class="modal fade" id="modalEditarFondo" tabindex="-1" aria-labelledby="modalEditarFondoLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEditarFondoLabel">Gestionar Fondo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formEditarFondo">

                    <div class="row">
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="modal-fondo-id" class="form-label fw-bold">ID Fondo</label>
                                <input type="text" class="form-control" id="modal-fondo-id" name="idfondo" disabled>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="mb-3">
                                <label for="modal-fondo-descripcion" class="form-label fw-bold">Descripción <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="modal-fondo-descripcion" name="descripcion">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="modal-fondo-proveedor" class="form-label fw-bold">Proveedor <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="modal-fondo-proveedor" name="proveedor">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="modal-fondo-tipofondo" class="form-label fw-bold">Tipo de Fondo <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="modal-fondo-tipofondo" name="tipo_fondo">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="modal-fondo-fechainicio" class="form-label fw-bold">Fecha Inicio <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="modal-fondo-fechainicio" name="fecha_inicio">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="modal-fondo-fechafin" class="form-label fw-bold">Fecha Fin <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="modal-fondo-fechafin" name="fecha_fin">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="modal-fondo-valor" class="form-label fw-bold">Valor Fondo <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="modal-fondo-valor" name="valor_fondo" step="0.01">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="modal-fondo-estado" class="form-label fw-bold">Estado</label>
                                <input type="text" class="form-control" id="modal-fondo-estado" name="estado" disabled>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnGuardarCambiosFondo">
                    <i class="fa-solid fa-pen-to-square me-2"></i> Modificar
                </button>
            </div>
        </div>
    </div>
</div>
