@{
    ViewData["Title"] = "Inactivación de Fondos";
}

<h2>Inactivación - Fondo</h2>
<hr>

<link rel="stylesheet" href="~/css/datatables.css" asp-append-version="true" />

<div class="table-responsive" class="text-center">
    <div id="tabla">
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery-3.7.1.min.js" asp-append-version="true"></script>
    <script src="~/js/Fondo/InactivarFondo.js" asp-append-version="true"></script>
    <script src="~/js/datatables.min.js" asp-append-version="true"></script>
}
@**@

<div class="modal fade" id="modalEditarFondo" tabindex="-1" aria-labelledby="modalEditarFondoLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        @* <-- CAMBIO: Se agranda el modal a extra-large (xl) para la tabla *@
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEditarFondoLabel">Visualizar Datos de Fondo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formEditarFondo">
                    <input type="hidden" id="modal-idOpcion" name="idOpcion">

                    @* ... (Tus campos de fondo existentes se mantienen aquí) ... *@

                    <div class="row">
                        @* <--- Agregado para agrupar en filas (opcional) *@
                        <div class="col-md-6 mb-3">
                            <label for="modal-fondo-id" class="form-label fw-bold">ID Fondo</label>
                            <input type="text" class="form-control" id="modal-fondo-id" name="idfondo" disabled>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modal-fondo-descripcion" class="form-label fw-bold">Descripción <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="modal-fondo-descripcion" name="descripcion" disabled>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modal-fondo-proveedor" class="form-label fw-bold">Proveedor <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="modal-fondo-proveedor" name="proveedor" disabled>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modal-fondo-tipofondo" class="form-label fw-bold">Tipo de Fondo <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="modal-fondo-tipofondo" name="tipo_fondo" disabled>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modal-fondo-fechainicio" class="form-label fw-bold">Fecha Inicio <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="modal-fondo-fechainicio" name="fecha_inicio" disabled>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modal-fondo-fechafin" class="form-label fw-bold">Fecha Fin <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="modal-fondo-fechafin" name="fecha_fin" disabled>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modal-fondo-valor" class="form-label fw-bold">Valor Fondo <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="modal-fondo-valor" name="valor_fondo" step="0.01" disabled>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modal-fondo-estado" class="form-label fw-bold">Estado</label>
                            <input type="text" class="form-control" id="modal-fondo-estado" name="estado" disabled>
                        </div>
                    </div> @* <--- Fin de row *@
                </form>

                <hr class="mt-4 mb-3">

                @* 📌 NUEVA SECCIÓN: Tabla de Acuerdos *@
                <h5 class="mb-3 text-primary"><i class="fa-solid fa-file-contract me-2"></i> Datos del Acuerdo Asociado</h5>
                <div class="table-responsive">
                    <div id="tabla-acuerdo-fondo">
                        @* Aquí se cargará la tabla mediante JS *@
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                @* ⚠️ ELIMINÉ EL BOTÓN "GUARDAR" ya que es un modal de inactivación/visualización, no de edición. Si lo necesitas para INACTIVAR, cámbiale el texto y la clase. *@
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
