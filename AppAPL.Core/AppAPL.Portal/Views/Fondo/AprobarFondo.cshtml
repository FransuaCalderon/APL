@{
    ViewData["Title"] = "Aprobación de Fondos";

}

@{
    // Viene del ViewBag que llenamos en el controlador
    var usuarioActual = ViewBag.UsuarioActual as string;
}
  
@section Scripts {
    <script>
        // Variable global con el usuario logueado
        window.usuarioActual = '@usuarioActual';
    </script>
    <script src="~/js/jquery-3.7.1.min.js" asp-append-version="true"></script>
    <script src="~/js/Fondo/AprobarFondo.js" asp-append-version="true"></script>
    <script src="~/js/datatables.min.js" asp-append-version="true"></script>
}

<h2>Aprobación - Fondo</h2>
<hr>

<link rel="stylesheet" href="~/css/datatables.css" asp-append-version="true" />

<div class="table-responsive">
    <div id="tabla">
    </div>
</div>



<!-- Modal Personalizado -->
<div id="modalEditarFondo" class="custom-modal">
    <div class="custom-modal-overlay"></div>
    <div class="custom-modal-container">
        <div class="custom-modal-header">
            <h5 class="custom-modal-title">Visualizar Datos de Fondo - Aprobación</h5>
            <button type="button" class="custom-modal-close" onclick="cerrarModalFondo()">&times;</button>
        </div>

        <div class="custom-modal-body">
            <form id="formEditarFondo">
                <!-- PRIMERA FILA -->
                <div class="custom-form-row">
                    <div class="custom-form-col">
                        <label class="custom-label">ID Fondo</label>
                        <input type="text" class="custom-input" id="modal-fondo-id" name="idfondo" disabled>
                    </div>
                    <div class="custom-form-col">
                        <label class="custom-label">Descripción</label>
                        <input type="text" class="custom-input" id="modal-fondo-descripcion" name="descripcion" disabled>
                    </div>
                    <div class="custom-form-col">
                        <label class="custom-label">Proveedor</label>
                        <input type="text" class="custom-input" id="modal-fondo-proveedor" name="proveedor" disabled>
                    </div>
                    <div class="custom-form-col">
                        <label class="custom-label">Tipo de Fondo</label>
                        <input type="text" class="custom-input" id="modal-fondo-tipofondo" name="tipo_fondo" disabled>
                    </div>
                </div>

                <!-- SEGUNDA FILA -->
                <div class="custom-form-row">
                    <div class="custom-form-col">
                        <label class="custom-label">Fecha Inicio</label>
                        <input type="date" class="custom-input" id="modal-fondo-fechainicio" name="fecha_inicio" disabled>
                    </div>
                    <div class="custom-form-col">
                        <label class="custom-label">Fecha Fin</label>
                        <input type="date" class="custom-input" id="modal-fondo-fechafin" name="fecha_fin" disabled>
                    </div>
                    <div class="custom-form-col">
                        <label class="custom-label">Valor Fondo</label>
                        <input type="text" class="custom-input" id="modal-fondo-valor" name="valor_fondo" disabled>
                    </div>
                    <div class="custom-form-col">
                        <label class="custom-label">Estado</label>
                        <input type="text" class="custom-input" id="modal-fondo-estado" name="estado" disabled>
                    </div>
                </div>

                <!-- TERCERA FILA (Valores adicionales) -->
                <div class="custom-form-row">
                    <div class="custom-form-col">
                        <label class="custom-label">$ Disponible</label>
                        <input type="text" class="custom-input" id="modal-fondo-disponible" name="disponible" disabled>
                    </div>
                    <div class="custom-form-col">
                        <label class="custom-label">$ Comprometido</label>
                        <input type="text" class="custom-input" id="modal-fondo-comprometido" name="comprometido" disabled>
                    </div>
                    <div class="custom-form-col">
                        <label class="custom-label">$ Liquidado</label>
                        <input type="text" class="custom-input" id="modal-fondo-liquidado" name="liquidado" disabled>
                    </div>
                    <div class="custom-form-col">
                        <!-- Espacio vacío para mantener el grid -->
                    </div>
                </div>


                <!-- CUARTA FILA (Comentario) -->
                <div class="custom-form-row">
                    <div class="custom-form-col">
                        <label class="custom-label" for="comentario">Comentario:</label>
                        <textarea class="custom-input" rows="3" maxlength="200" id="modal-fondo-comentario" name="comentario"></textarea>
                    </div>
                    
                </div>
            </form>

            <hr class="custom-divider">

            <!-- SECCIÓN TABLA DE APROBACIONES -->
            <h5 class="custom-section-title">
                <i class="fa-solid fa-list-check"></i> Historial de Aprobaciones
            </h5>
            <div class="custom-table-container">
                <div id="tabla-aprobaciones-fondo"></div>
            </div>
        </div>

        <div class="custom-modal-footer">
            <button type="button" class="custom-btn-secondary" onclick="cerrarModalFondo()">
                Cerrar
            </button>
            <button type="button" class="custom-btn-danger" id="btnRechazarFondo">
                <i class="fa-solid fa-circle-xmark custom-btn-icon"></i>
                Rechazar
            </button>
            <button type="button" class="custom-btn-primary" id="btnAprobarFondo">
                <i class="fa-solid fa-circle-check custom-btn-icon"></i>
                Aprobar
            </button>
        </div>
    </div>
</div>