@{
    ViewData["Title"] = "Aprobación de Fondos";
}

<h2>Aprobación - Fondo</h2>
<hr>

<link rel="stylesheet" href="~/css/datatables.css" asp-append-version="true" />

<div class="table-responsive" class="text-center">
    <div id="tabla">
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery-3.7.1.min.js" asp-append-version="true"></script>
    <script src="~/js/Fondo/AprobarFondo.js" asp-append-version="true"></script>
    <script src="~/js/datatables.min.js" asp-append-version="true"></script>
}

<!-- Modal para Visualizar Fondo -->
<div id="modalEditarFondo" class="custom-modal">
    <div class="custom-modal-overlay"></div>
    <div class="custom-modal-container">
        <div class="custom-modal-header">
            <h5 class="custom-modal-title">Visualizar Datos de Fondo</h5>
            <button type="button" class="custom-modal-close" onclick="cerrarModalFondo()">&times;</button>
        </div>

        <div class="custom-modal-body">
            <form id="formEditarFondo">
                <input type="hidden" id="modal-idOpcion" name="idOpcion">

                <!-- PRIMERA FILA -->
                <div class="custom-form-row">
                    <div class="custom-form-col">
                        <label for="modal-fondo-tipofondo" class="form-label fw-bold col-form-label-sm">Tipo Fondo</label>
                        <input type="text" class="custom-input" id="modal-fondo-tipofondo" name="idfondo" disabled>
                    </div>
                    <div class="custom-form-col">
                        <label for="modal-fondo-proveedor" class="form-label fw-bold col-form-label-sm">Proveedor</label>
                        <input type="text" class="custom-input" id="modal-fondo-proveedor" name="descripcion" disabled>
                    </div>
                    <div class="custom-form-col">
                        <label for="modal-fondo-descripcion" class="form-label fw-bold col-form-label-sm">Descripción</label>
                        <input type="text" class="custom-input" id="modal-fondo-descripcion" name="proveedor" disabled>
                    </div>
                    <div class="custom-form-col">
                        <label for="modal-fondo-fechainicio" class="form-label fw-bold col-form-label-sm">Fecha Inicio</label>
                        <input type="text" class="custom-input" id="modal-fondo-fechainicio" name="tipo_fondo" disabled>
                    </div>
                    <div class="custom-form-col">
                        <label for="modal-fondo-fechafin" class="form-label fw-bold col-form-label-sm">Fecha Fin</label>
                        <input type="text" class="custom-input" id="modal-fondo-fechafin" name="tipo_fondo" disabled>
                    </div>
                </div>

                <!-- SEGUNDA FILA -->
                <div class="custom-form-row">
                    <div class="custom-form-col">
                        <label for="modal-fondo-valor" class="form-label fw-bold col-form-label-sm">$ Valor Total</label>
                        <input type="text" class="custom-input" id="modal-fondo-valor" name="fecha_inicio" disabled>
                    </div>
                    <div class="custom-form-col">
                        <label for="modal-fondo-disponible" class="form-label fw-bold col-form-label-sm">$ Disponible</label>
                        <input type="text" class="custom-input" id="modal-fondo-disponible" name="fecha_fin" disabled>
                    </div>
                    <div class="custom-form-col">
                        <label for="modal-fondo-comprometido" class="form-label fw-bold col-form-label-sm">$ Comprometido</label>
                        <input type="text" class="custom-input" id="modal-fondo-comprometido" name="valor_fondo" step="0.01" disabled>
                    </div>
                    <div class="custom-form-col">
                        <label for="modal-fondo-liquidado" class="form-label fw-bold col-form-label-sm">$ Liquidado</label>
                        <input type="text" class="custom-input" id="modal-fondo-liquidado" name="estado" disabled>
                    </div>
                </div>
            </form>

            <hr class="custom-divider">

            <!-- SECCIÓN TABLA -->
            <h5 class="custom-section-title">
                <i class="fa-solid fa-file-contract"></i> Datos del Acuerdo Asociado
            </h5>
            <div class="custom-table-container">
                <div id="tabla-aprobaciones-fondo"></div>
            </div>
        </div>

        <div class="custom-modal-footer">
            <button type="button" class="custom-btn-secondary" onclick="cerrarModalFondo()">
                Cerrar
            </button>
            <!-- Estos botones son opcionales, actívalos si los necesitas -->
            <button type="button" class="custom-btn-danger" onclick="rechazarFondo()" id="btnRechazarFondo">
                <i class="fa-solid fa-circle-xmark custom-btn-icon"></i>
                Inactivar
            </button>
            <button type="button" class="custom-btn-primary" onclick="aprobarFondo()" id="btnAprobarFondo">
                <i class="fa-solid fa-circle-check custom-btn-icon"></i>
                Aprobar
            </button>
        </div>
    </div>
</div>